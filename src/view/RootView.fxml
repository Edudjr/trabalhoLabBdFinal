<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RootViewController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
            <Menu mnemonicParsing="false" text="Arquivo">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Fechar" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Dashboard">
            <items>
              <MenuItem mnemonicParsing="false" text="Exibir dashboard" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Relatórios">
            <items>
                  <MenuItem mnemonicParsing="false" text="Transporte" />
                  <MenuItem mnemonicParsing="false" onAction="#handleCsmClick" text="Compras de clientes" />
              <MenuItem mnemonicParsing="false" onAction="#handleCcsClick" text="Clientes por país e estado" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSmClick" text="Vendas diárias no mês" />
                  <MenuItem mnemonicParsing="false" onAction="#handlePscClick" text="Vendas de produto por categoria" />
                  <MenuItem mnemonicParsing="false" text="Vendas no ano" />
                  <MenuItem mnemonicParsing="false" text="Produtos vendidos na mesma venda" />
                  <MenuItem mnemonicParsing="false" onAction="#handleTpClick" text="Impostos pagos no ano" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSysClick" text="Vendas por país e estado" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Ajuda">
            <items>
              <MenuItem mnemonicParsing="false" text="Sobre" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
